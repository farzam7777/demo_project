<div class="container">
  <%= render 'movie_details', movie: @movie %>

  <section id="actors">
    <h2> All Actors </h2>
    <ul> <%= render @actors %> </ul> <hr>
  </section>

  <section id="posters">
    <h2> All Posters </h2>
    <div class="row">
      <%= render @posters %>
    </div> <hr>
  </section>

  <div class="panel panel-primary review-panel-width">
    <div class="panel-heading"> <h4> <strong> Reviews </strong> </h4></div>
    <div class="panel-body">
      <div id="reviews">
        <%= render @reviews %>
      </div>
      <%= render_reviews_form %>
    </div>
  </div>

  <div class="row">
    <div class = "btn-margin">
      <%= link_to "All Movies", root_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

