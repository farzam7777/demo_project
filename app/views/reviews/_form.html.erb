<div class="row">
  <div class="col-md-4">
    <%= form_for [@movie, @movie.reviews.build] do |f| %>
      <%= f.text_area :content, class: 'form-control text-area-width', size: '30x2', placeholder: "Make Review", autofocus: true %>
      
      <%= f.hidden_field :user_id, value: current_user.id %>
      
      <%= f.submit 'Submit Review', class: 'btn btn-info movie_margin btn-margin  ' %>
    <% end %>
  </div>
  <div class="col-md-8"></div>
</div>
